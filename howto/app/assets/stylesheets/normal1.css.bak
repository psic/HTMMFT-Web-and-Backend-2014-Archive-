table {
    font-family: arial, verdana, sans-serif;
    font-size: 11px;
    border-collapse:collapse;
    margin: 5px;
}
td {
    padding: 5px;
}
th.graph {
   font-size:25px;
   font-weight:bold;
}

td.graph {
    width: 100px;
}
td.graph .bar {
    background: #4291ea;
    height:5px;
	float:left;
	border:outset;
    
}
td.graph .barfiller {
    background: #022567;
    height:5px;
	border:inset;
}

td.graph_joueur {
    width: 200px;
}
td.graph_joueur .bar_joueur {
   background: #4291ea;
    height: 15px;
    float:left;   
    border:outset;
}
td.graph_joueur .barfiller_joueur {
    background: #022567;
    height: 15px;
    border:inset;
} 
