<% i=1 %>
<% @classement.each do |equipe| %>
<% if (i % 2 == 1) %>
<% @classe = "impaire" %>
<% else %>
<% @classe = "paire" %>
<% end %>
<% if equipe.equipeID == @equipe %>
<tr class ="mon_equipe">
<% else %>
<tr class ="<%= @classe %>">
<% end %>
<td class="classement_tab" align="left">
<%= i %>.<%= link_to equipe.equipe, :controller=>'equipes', :action=>'show', :id=>equipe.equipeID %>
</td>
<td class="classement_tab"align="center">
<%= equipe.points %>
</td>
<td class="classement_tab" align="center">
<%= equipe.nb_journee %>
</td>
<td class="classement_tab" align="center">
<%= equipe.victoire %>|<%= equipe.nul %>|<%= equipe.defaite %>
</td>
<td class="classement_tab"align="center">
<%= equipe.bp %>|<%= equipe.bc %>
</td>
