
<% if current_user %>
	<div class="menu">	
    <%= link_to current_user.login,:controller=>'users' %>|<%= link_to '*', :controller=>'report' %>|<%= link_to '?', :controller=>'howto' %>|<%= link_to "Disconnect", logout_path %>
	</div>
<% else %>
	<div class="laligne">
     <%= link_to "Sign up", new_user_path %>
    <%= form_for @user_session, :url => user_session_path do |f|  %>
       <% @user_session.errors.full_messages.each do |msg| %>
		<p><%= msg %></p>
		<% end %>
        <%= f.text_field :login, :value=>'login' %>
        <%= f.password_field :password, :value=>'password' %>
        <%= f.check_box :remember_me %>
      <%= f.submit "Connect" %>
    <% end %>
    </div>
<% end %>
